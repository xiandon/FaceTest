<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".list_view.ListViewActivity">

    <Button
        android:id="@+id/btn_list_view_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SimpleListView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_list_view_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="CustomListView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_list_view_custom_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="CustomBaseListView"
        android:textAllCaps="false" />

</LinearLayout>